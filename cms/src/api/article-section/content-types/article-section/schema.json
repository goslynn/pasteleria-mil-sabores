{
  "kind": "collectionType",
  "collectionName": "article_sections",
  "info": {
    "singularName": "article-section",
    "pluralName": "article-sections",
    "displayName": "ArticleSection"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 30,
      "required": true
    },
    "paragraph": {
      "type": "blocks",
      "required": true
    },
    "variant": {
      "type": "enumeration",
      "required": true,
      "default": "centered",
      "enum": [
        "centered",
        "imageLeft",
        "imageRight"
      ]
    },
    "image": {
      "type": "media",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "variant"
            },
            "centered"
          ]
        }
      },
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "slug": {
      "type": "uid"
    }
  }
}
